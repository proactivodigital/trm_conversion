<odoo>
    <data>
        <!-- Definition of a custom report for the 'account.move' model -->
        <record id="report_invoice_document" model="ir.actions.report">

            <!-- Name of the report -->
            <field name="name">Invoice Document</field>

            <!-- Model associated with the report -->
            <field name="model">account.move</field>

            <!-- Report type (in this case, qweb-pdf) -->
            <field name="report_type">qweb-pdf</field>

            <!-- Report name in the system -->
            <field name="report_name">trm_account.report_invoice_document</field>

            <!-- Report file name in the system -->
            <field name="report_file">trm_account.report_invoice_document</field>
        </record>
    </data>
</odoo>
