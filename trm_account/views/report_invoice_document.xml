<odoo>
    <template id="report_trm" inherit_id="account.report_invoice_document">
        <xpath expr="//div[@id='informations']" position="before">
            <!-- TRM section to display before the information block -->
            <div class="trm-section">
                <p>TRM Date: <span t-field="o.trm_date"/></p>  <!-- Display TRM date -->
                <p>TRM Value: <span t-field="o.trm_value"/></p>  <!-- Display TRM value -->
            </div>
        </xpath>
    </template>
</odoo>
